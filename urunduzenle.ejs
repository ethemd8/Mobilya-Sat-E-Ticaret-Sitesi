      <!-- Main content -->
      <div class="content">
        <div class="container-fluid">


          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Ürün düzenle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->

            <% urunler.forEach(function(urun) { %>
              <tr>

                <td>

                </td>

                <form action="/admin/urunDuzenle/<%= urun.product_id %>" method="POST">

                  <div class="card-body">
                    <div class="form-group">
                      <label for="urunAdi">ürün adı</label>
                      <input value="<%= urun.product_name %>" type="text" class="form-control" id="urunAdi"
                        name="urunAdi" placeholder="ürün adını gir">
                    </div>
                    <div class="form-group">
                      <label for="urunKategori">Ürün Kategorisi</label>
                      <select class="form-control" id="urunKategori" name="urunKategori">
                        <% categories.forEach(function(category) { %>
                          <option value="<%= category.category_id %>">
                            <%= category.category_name %>
                          </option>
                          <% }); %>
                      </select>
                    </div>

                    <div class="form-group">
                      <label for="urunFiyati">ürün Fiyatı</label>
                      <input value="<%= urun.price %>" type="text" class="form-control" id="urunFiyati"
                        name="urunFiyati" placeholder="ürün fiyatını gir">
                    </div>
                    <div class="form-group">
                      <label for="urunStok">ürün stok sayısı</label>
                      <input value="<%= urun.stock_quantity %>" type="text" class="form-control" id="urunStok"
                        name="urunStok" placeholder="ürün stok sayısını gir">
                    </div>
                    <div class="form-group">
                      <label for="urunAciklama">ürün açıklama</label>
                      <input value="<%= urun.description %>" type="text" class="form-control" id="urunAciklama"
                        name="urunAciklama" placeholder="açıklama">
                    </div>
                  </div>

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                  </div>

                </form>

                <form action="/admin/urunKategoriDuzenle/<%= urun.product_id %>" method="POST" id="imageForm">
                  
                  <div class="form-group">
                    <label for="yeniKategori">Yeni Kategori</label>
                    <input type="text" class="form-control" id="yeniKategori" name="yeniKategori"
                      placeholder="Yeni kategori adı girin">
                  </div>


                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                  </div>
                </form>










                <label for="urunResimler">Kayıtlı Ürün Resimleri</label>
                <% resimler.forEach(function(resim) { %>
                  <img src="/assets/product_img/<%= resim.image_url %>" width="300" height="200"
                    alt="<%= resim.image_url %>">

                  <% }); %>




                    <form action="/admin/urunResimduzenle/<%= urun.product_id %>" method="POST" id="imageForm"
                      enctype="multipart/form-data">
                      <div class="form-group">
                        <label for="urunResimler">Yeni Resimler</label>
                        <input type="file" class="form-control-file" id="urunResimler" name="urunResimler" multiple>
                        <div id="preview"></div>
                      </div>

                      <!-- Diğer form elemanları -->
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Gönder</button>
                      </div>
                    </form>
                    <% }); %>





          </div>

