  <script>
    // Dosya girdisi değiştiğinde önizleme yap
    document.getElementById('urunResimler').addEventListener('change', function (event) {
      var preview = document.getElementById('preview');
      preview.innerHTML = ''; // Önceki önizlemeyi temizle

      var files = event.target.files;
      for (var i = 0; i < files.length; i++) {
        var file = files[i];
        var reader = new FileReader();

        // Dosya okuma tamamlandığında
        reader.onload = function (e) {
          var img = document.createElement('img');
          img.src = e.target.result;
          img.style.maxWidth = '200px'; // İsteğe bağlı: önizleme boyutunu ayarla
          preview.appendChild(img);
        };

        // Dosyayı oku
        reader.readAsDataURL(file);
      }
    });
  </script>
