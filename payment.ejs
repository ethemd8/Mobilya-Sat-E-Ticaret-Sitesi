<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Ödeme Sayfası</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.ico">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">

    <link rel="stylesheet" href="../../assets/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../assets/public/css/owl.carousel.min.css">
    <link rel="stylesheet" href="../../assets/public/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="../../assets/public/css/core.css">
    <link rel="stylesheet" href="../../assets/public/css/shortcode/shortcodes.css">
    <link rel="stylesheet" href="../../assets/public/style.css">
    <link rel="stylesheet" href="../../assets/public/css/responsive.css">
    <link rel="stylesheet" href="../../assets/public/css/custom.css">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }
        .form-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        .form-container h2 {
            color: #343a40;
            text-align: center;
            margin-bottom: 30px;
        }
        .form-container label {
            color: #343a40;
            font-weight: bold;
        }
        .form-control {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }
        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>

    <script src="../../assets/public/js/vendor/modernizr-3.5.0.min.js"></script>
</head>

<body>
    <div class="wrapper">
        <header id="htc__header" class="htc__header__area header--one">
            <!-- Start Mainmenu Area -->
            <div id="sticky-header-with-topbar" class="mainmenu__wrap sticky__header">
                <div class="container">
                    <div class="row">
                        <div class="menumenu__container clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-5">
                                <div class="logo">
                                    <a href="/"><img src="https://eyupmodesa.com.tr/img/firmalar/b/h_1490271476_Mobilya-Tasarim-Evi.jpg" alt="logo images"></a>
                                </div>
                            </div>
                            <div class="col-md-7 col-lg-8 col-sm-5 col-xs-3">
                                <nav class="main__menu__nav hidden-xs hidden-sm">
                                    <ul class="main__menu">
                                        <li class="drop"><a href="/dashboard">Anasyafa</a></li>
                                        <li><a href="/contact">İletişim</a></li>
                                    </ul>
                                </nav>

                                <div class="mobile-menu clearfix visible-xs visible-sm">
                                    <nav id="mobile_dropdown">
                                        <ul>
                                            <li><a href="/dashboard">Anasyafa</a></li>
                                            <li><a href="/contact">İletişim</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-md-3 col-lg-2 col-sm-4 col-xs-4">
                                <div class="header__right">
                                    <div class="header__search search search__open">
                                        <a href="#"><i class="icon-magnifier icons"></i></a>
                                    </div>
                                   
                                    <div class="header__account dropdown">
                                        <a href="#" id="account-icon" class="dropdown-toggle" role="button"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="icon-user icons"></i>
                                        </a>
                                        
                                        <div class="dropdown-menu" aria-labelledby="account-icon">
                                           
                                                <a class="dropdown-item" href="/siparisler">siparişler</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" href="/logout">Çıkış Yap</a>
                                                <a class="dropdown-item" href="/login">Giriş yap</a>
                                           
                                            
                                            
                                        </div>
                                    </div>
                                    
                                    
                                    
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mobile-menu-area"></div>
                </div>
            </div>
            <!-- End Mainmenu Area -->
        </header>
       
        <!-- End Header Area -->

        <div class="body__overlay"></div>
        <!-- Start Offset Wrapper -->
        <div class="offset__wrapper">
            <!-- Start Search Popap -->
            <div class="search__area">
                <div class="container" >
                    <div class="row" >
                        <div class="col-md-12" >
                            <div class="search__inner">
                                <form action="#" method="get">
                                    <input placeholder="Ara ... " type="text">
                                    <button type="submit"></button>
                                </form>
                                <div class="search__close__btn">
                                    <span class="search__close__btn_icon"><i class="zmdi zmdi-close"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Search Popap -->
            <!-- Start Cart Panel -->
           
            <!-- End Cart Panel -->
        </div>
       
        <div class="container mt-8">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="cart-main-area ptb--100 bg__white">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-11 col-sm-11 col-xs-11 smt-10 xmt-1s0">
                                    <div class="htc__cart__total">
                                        <h6>Toplam Ödeme</h6>
                                        <div class="cart__desk__list">
                                            <ul class="cart__desc">
                                                <li>Toplam Ödeme</li>
                                                <li>Nakliye</li>
                                            </ul>
                                            <ul class="cart__price">
                                                <li id="cartTotal">₺<%= cartTotal %></li>
                                                <li id="shipping">₺<%=shipping%></li>
                                            </ul>
                                        </div>
                                        <div class="cart__total">
                                            <span>Sipariş Tutarı</span>
                                            <span id="orderTotal">₺<%= orderTotal %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-6">
                    <div class="form-container">
                        <h2>Ödeme Formu</h2>
                        <form action="/submit-payment" method="POST">
                            <div class="form-group">
                                <label for="fullName">Ad Soyad</label>
                                <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Adınızı ve Soyadınızı Giriniz" required>
                            </div>
                            <div class="form-group">
                                <label for="email">E-posta</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="E-posta Adresinizi Giriniz" required>
                            </div>
                            <div class="form-group">
                                <label for="address">Adres</label>
                                <input type="text" class="form-control" id="address" name="address" placeholder="Adresinizi Giriniz" required>
                            </div>
                            <div class="form-group">
                                <label for="city">Şehir</label>
                                <input type="text" class="form-control" id="city" name="city" placeholder="Şehrinizi Giriniz" required>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="state">Eyalet/İl</label>
                                    <input type="text" class="form-control" id="state" name="state" placeholder="Eyalet/İl" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="zip">Posta Kodu</label>
                                    <input type="text" class="form-control" id="zip" name="zip" placeholder="Posta Kodu" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="cardName">Kart Üzerindeki İsim</label>
                                <input type="text" class="form-control" id="cardName" name="cardName" placeholder="Kart Üzerindeki İsim" required>
                            </div>
                            <div class="form-group">
                                <label for="cardNumber">Kredi Kartı Numarası</label>
                                <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="Kredi Kartı Numarası" required>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="expMonth">Son Kullanma Tarihi (Ay)</label>
                                    <input type="text" class="form-control" id="expMonth" name="expMonth" placeholder="Ay" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="expYear">Son Kullanma Tarihi (Yıl)</label>
                                    <input type="text" class="form-control" id="expYear" name="expYear" placeholder="Yıl" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="cvv">CVV</label>
                                    <input type="text" class="form-control" id="cvv" name="cvv" placeholder="CVV" required>
                                </div>
                            </div>
                            <input type="hidden" name="cartTotal" value="<%= cartTotal %>">
                            <input type="hidden" name="shipping" value="<%= shipping %>">
                            <input type="hidden" name="orderTotal" value="<%= orderTotal %>">
                            <input type="hidden" name="items" value='<%= JSON.stringify(items) %>'>

                            <button type="submit" class="btn btn-primary btn-block mt-4">Ödeme Yap</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../../assets/public/js/vendor/jquery-3.2.1.min.js"></script>
    <script src="../../assets/public/js/bootstrap.min.js"></script>
    <script src="../../assets/public/js/plugins.js"></script>
    <script src="../../assets/public/js/slick.min.js"></script>
    <script src="../../assets/public/js/owl.carousel.min.js"></script>
    <script src="../../assets/public/js/waypoints.min.js"></script>
    <script src="../../assets/public/js/main.js"></script>
</body>
</html>
